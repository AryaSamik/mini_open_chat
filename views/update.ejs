            <br>
            <br>
            To : <%= chat.to %>
                <br>
                <br>
                Message :
                <br>
                <textarea name="msg" id="" cols="30" rows="10"><%= chat.msg %></textarea>
                <br>
                <br>
                <button>Submit</button>
    </form>
</body>

</html>